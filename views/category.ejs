      <div id="pageTracker">
        <a href="index.html" class="linkPath">Home ></a>
        <a href="category.html" class="linkPath" id="linkTitle"> </a>
      </div>
      <div id="categoryTitle"></div>
    </div>

    <div id="productSort">
      <div id="productSortIcon">
        <p>Sort</p>
        <span class="material-icons">expand_more</span>
      </div>
      <div id="sortList">
        <ul>
          <li>Alphabetically A to Z</li>
          <li>Alphabetically Z to A</li>
          <li>Price Low to High</li>
          <li>Price High to Low</li>
        </ul>
      </div>
    </div>
    <p><%= products[1].category%></p>
    <div id="productGrid">

      
        <% products.forEach(item => { %>
          <a href= "/collection/productDetail/<%= item._id %>">
           <div class="productCard">
                <div class="prductImgDiv">
                    <img src= <%= item.productImgUrl2[0] %>
                        class="productImg">
                </div>
                <div class="productDetailsDiv">
                    <div class="productNameDiv">
                      <%= item.productName %>
                    </div>
                    <div class="productReviewsDiv">
                        <span>
                            <i class="fas fa-star checked"></i>
                            <i class="fas fa-star checked"></i>
                            <i class="fas fa-star checked"></i>
                            <i class="fas fa-star checked"></i>
                            <i class="fas fa-star checked"></i>
                        </span>
                        <span> <%= item.totalReview %> reviews</span>
                    </div>
                    <div class="productPriceDiv">
                        <span>
                            MRP Rs.<%= item.price %>
                        </span>
                    </div>
                </div>
            </div>
          </a>
        <% }) %>
      
